<h1><%=t('.title')%></h1>
<p><%=t('.contact_us')%></p>

<%= form_tag request_contact_path, method: 'post' do %>
<div class="form">
  <div class="field">
    <%= label_tag t('.name') %><br />
    <%= text_field_tag :name, '', title: t('.enter_name'), size:50 %>
  </div>
  <div class="field">
    <%= label_tag :email, t('.email') %><br />
    <%= email_field_tag :email, '', title: t('.enter_email'), size:50%>
  </div>
  <div class="field">
    <%= label_tag :telephone, t('.telephone')%>
    <%= telephone_field_tag :telephone, '', title: t('.enter_telephone'), size:50%>

  </div>
  <div class="field">
    <%= label_tag :message, t('.message') %><br />
    <%= text_field_tag :message, '', title: t('.enter_message'), size:100 %>
  </div>
  <div class="actions">
    <%= submit_tag t('.submit')%>
  </div>
  </div>
<% end %>
